format('woff2'),
url('https://cdn.shopify.com/s/files/1/0671/5614/8541/files/AeonikPro-Bold.woff?v=1761936197')
format('woff'),
url('https://cdn.shopify.com/s/files/1/0671/5614/8541/files/AeonikPro-Bold.ttf?v=1761936198')
format('truetype'); font-weight: bold; font-style: normal; font-display: swap; }

/*---------------- Smile.io Launcher Overrides -------------------*/

/* Hide Smile launcher on /account page */ .template-customers-account
div.smile-launcher-frame-container.smile-launcher-border-radius-circular {
display: none !important; }

/* Keep Smile launcher below drawers (mini-cart, login) on all other pages.
.t4s-drawer uses z-index: 200, so we set the launcher below that. */
div.smile-launcher-frame-container.smile-launcher-border-radius-circular {
z-index: 190 !important; }

/*---------------- Global Custom CSS -------------------*/
{{- settings.global_css -}}

/*---------------- Custom CSS for only desktop -------------------*/ @media
(min-width: 1025px) {
{{- settings.desktop_css -}}
}

/*---------------- Custom CSS for tablet, mobile -------------------*/ @media
(max-width:1024px) {
{{- settings.tablet_mobile_css -}}
}

/*---------------- Custom CSS for only tablet -------------------*/ @media
(min-width: 768px) and (max-width:1024px) {
{{- settings.tablet_css -}}
}

/*---------------- Custom CSS for only mobile -------------------*/ @media
(max-width:767px){
{{- settings.mobile_css -}}
}
