<style>
    .t4s-career-inner{
        border: 1px solid rgba(var(--border-color-rgb),.85);padding: 48px 28px;
    }
    .t4s-career-head{
        padding-bottom: 26px;margin-bottom: 15px;
        border-bottom: 1px solid rgba(var(--border-color-rgb),.85);
    }
    .t4s-career-heading{
        font-size: 22px;
        font-weight: 400;
        line-height: 30px;
        color: var(--secondary-color);
        margin-bottom: 5px;
    }
    .t4s-career-heading a{color: inherit}
    .t4s-career-heading a:hover{color: var(--accent-color);}
    .t4s-career-job-type{
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 1.2px;
        color: var(--secondary-color);
        margin-top: 15px;
        padding-left: 18px;
        position: relative;
    }
    .t4s-career-job-type::before{
        position: absolute;
        content:"";
        left: 0;
        top: 4px;
        width: 7px;
        height: 7px;
        border-radius: 50%;
        background-color: var(--accent-color);
    }
    .t4s-career-job{display: inline-flex;align-items: center;color: var(--secondary-color);}
    .t4s-career-job__label{
        font-size: 16px;
        font-weight: 400;
    }
    .t4s-career-job__icon{
        width: 26px;
        min-width: 26px;
        height: auto;
        fill: currentColor;
        margin-right: 13px;
    }
    .t4s-career-description p{
        margin-top: 26px;
        margin-bottom: 0px;
    }
    .t4s-career-button{
        margin-top: 15px;
    }
</style>
