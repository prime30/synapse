          {%- when 'form' -%}
                {%- liquid
                    assign se_stts = section.settings
                    assign advance_pr_type = meta_theme.advance_pr_type.value
                    assign advance_label = meta_theme.advance_label.value
                    assign is_fit_ratio_img = false
