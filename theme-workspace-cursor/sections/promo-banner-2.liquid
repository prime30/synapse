            background: {{ section.settings.background_color }};
        }

        .promo-banner-2-section p {
            margin: 0;
        }

        .promo-banner-2-section b,
        .promo-banner-2-section strong {
            font-weight: {{ section.settings.bold_font_weight }};
        }

        .promo-banner-2-expanded-coming-soon-text {
            margin-bottom: {{ section.settings.coming_soon_text_margin_bottom_desktop }};
            order: {{ section.settings.coming_soon_text_order_desktop }};
        }

        .promo-banner-2-expanded-coming-soon-text p {
            font-family: {{ section.settings.coming_soon_text_font.family }}, {{ section.settings.coming_soon_text_font.fallback_families }} !important;
            font-weight: {{ section.settings.coming_soon_text_font_weight }};
            font-size: {{ section.settings.coming_soon_text_font_size }}px;
            color: {{ section.settings.coming_soon_text_color }};
        }

        .promo-banner-2-expanded-promo-text {
            margin-bottom: {{ section.settings.promo_text_margin_bottom_desktop }};
            order: {{ section.settings.promo_text_order_desktop }};
        }

        .promo-banner-2-expanded-promo-text p {
            font-family: {{ section.settings.promo_text_font.family }}, {{ section.settings.promo_text_font.fallback_families }} !important;
            font-weight: {{ section.settings.promo_text_font_weight }};
            font-size: {{ section.settings.promo_text_font_size }}px;
            color: {{ section.settings.promo_text_color }};
        }

        .promo-banner-2-expanded-cta-wrapper {
            margin-bottom: {{ section.settings.cta_block_margin_bottom_desktop }};
            order: {{ section.settings.cta_block_order_desktop }};
        }

        .promo-banner-2-expanded-cta-1 {
            background: {{ section.settings.cta_1_background_color }};
        }

        .promo-banner-2-expanded-cta-1 p {
            font-family: {{ section.settings.cta_1_text_font.family }}, {{ section.settings.cta_1_text_font.fallback_families }} !important;
            font-weight: {{ section.settings.cta_1_text_font_weight }};
            font-size: {{ section.settings.cta_1_text_font_size }}px;
            color: {{ section.settings.cta_1_text_color }};
        }

        .promo-banner-2-expanded-cta-1:hover {
            background: {{ section.settings.cta_1_hover_background_color }};
        }

        .promo-banner-2-expanded-cta-2 {
            background: {{ section.settings.cta_2_background_color }};
        }

        .promo-banner-2-expanded-cta-2 p {
