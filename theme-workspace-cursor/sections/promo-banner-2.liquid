                            <img src="{{ section.settings.logo_expanded_mobile | img_url: 'master' }}" />
                        </div>
                    {% endif %}
                </div>

                <div class="promo-banner-2-expanded-right">
                    {% if section.settings.coming_soon_text != blank %}
                        <div class="promo-banner-2-expanded-coming-soon-text">
                            {{ section.settings.coming_soon_text }}
                        </div>
                    {% endif %}

                    {% if section.settings.promo_text != blank %}
                        <div class="promo-banner-2-expanded-promo-text">
                            {{ section.settings.promo_text }}
                        </div>
                    {% endif %}

                    {% if section.settings.cta_1_text != blank or section.settings.cta_2_text != blank %}
                        <div class="promo-banner-2-expanded-cta-wrapper">
                            {% if section.settings.cta_1_text != blank %}
                                {% if section.settings.cta_1_link != blank %}
                                    <a class"" href="https://dropdeadextensions.com/pages/deaducation-live-phoenix">
                                      <div class="promo-banner-2-expanded-cta promo-banner-2-expanded-cta-1">
                                        {{ section.settings.cta_1_text }}
                                    </div>
                                  
                                    </a>
                                {% else %}
                                    <div class="promo-banner-2-expanded-cta promo-banner-2-expanded-cta-1">
                                        {{ section.settings.cta_1_text }}
                                    </div>
                                {% endif %}
                            {% endif %}

                            {% if section.settings.cta_2_text != blank %}
                                {% if section.settings.cta_2_link != blank %}
