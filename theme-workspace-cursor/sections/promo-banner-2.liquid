                            {% if section.settings.cta_2_link != blank %}
                                 {% comment if you want to link to the login popup %}<a class="" data-drawer-delay-="" data-drawer-options='{ "id": "#t4s-login-sidebar" }' data-login-sidebar="create" href="{{ section.settings.cta_2_link }}">{% endcomment %}
                              <a class="" href="https://dropdeadextensions.com/pages/deaducation-live-phoenix">
                                    <div class="promo-banner-2-collapsed-cta promo-banner-2-collapsed-cta-2">
                                   {{ section.settings.cta_2_text }}
                                </div>
