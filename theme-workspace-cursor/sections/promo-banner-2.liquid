                                  <a class="t4s-pr" href="https://dropdeadextensions.com/pages/deadfest"><div class="promo-banner-2-expanded-cta promo-banner-2-expanded-cta-2">
                                        {{ section.settings.cta_2_text }}
                                    </div>
                                        
                                    </a>
                                {% else %}
                                    <div class="promo-banner-2-expanded-cta promo-banner-2-expanded-cta-2">
                                        {{ section.settings.cta_2_text }}
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="promo-banner-2-collapsed">
                <div class="promo-banner-2-collapsed-left">
                    {% if section.settings.logo_collapsed != blank %}
                        <div class="promo-banner-2-collapsed-logo-collapsed">
                            <img src="{{ section.settings.logo_collapsed | img_url: 'master' }}" />
