                        {{ section.settings.collapsed_section_text }}
                    </div>
                {% endif %}
            
                {% if section.settings.cta_1_text != blank or section.settings.cta_2_text != blank %} 
                    <div class="promo-banner-2-collapsed-cta-wrapper">
                        
                             {% comment %} <a href="{{ section.settings.cta_1_link }}">{% endcomment %}
